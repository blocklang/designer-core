{
  "name": "designer-core",
  "version": "0.0.1-alpha.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/blocklang/designer-core.git"
  },
  "scripts": {
    "build": "dojo build widget --mode dist --target lib",
    "test": "dojo test",
    "test:unit": "dojo build --mode unit && dojo test --unit --config local",
    "test:functional": "dojo build --mode functional && dojo test --functional --config local",
    "test:all": "dojo build --mode unit && dojo build --mode functional && dojo test --all --config local",
    "precommit": "lint-staged",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}' 'src/**/*.css' 'tests/**/*.ts'"
  },
  "dependencies": {
    "@dojo/framework": "^6.0.3",
    "tslib": "~1.9.1"
  },
  "devDependencies": {
    "@dojo/cli": "^6.0.0",
    "@dojo/cli-build-widget": "^6.0.1",
    "@dojo/cli-test-intern": "^6.0.0",
    "@types/node": "~9.6.5",
    "husky": "3.0.4",
    "lint-staged": "9.2.5",
    "prettier": "1.18.2",
    "typescript": "~3.4.5"
  },
  "lint-staged": {
    "*.{ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": false,
    "tabWidth": 4,
    "useTabs": true,
    "printWidth": 120,
    "arrowParens": "always"
  }
}
